<Window x:Class="Tunebro.TuneLight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tunebro"
        mc:Ignorable="d"
        Title="TuneLight" Height="450" Width="800" 
        Loaded="Init">
    <Window.Resources>
        <Storyboard x:Key="PageFade" Name="PageFade">
            <ColorAnimation 
                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" 
                Duration="0:0:3" />
        </Storyboard>
    </Window.Resources>

    <Grid Background="White" Name="MainGrid">
        <Button Content="Start Fade" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
